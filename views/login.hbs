<link rel="stylesheet" href="/stylesheets/login-page.css">
<div class="mx-auto shadow login-container">
  <h1>Login</h1>
  {{>message}}
  <form action="/users/login" method="POST">
    <label for="email">email :</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
      required value="user1@example.com">
    <label for="password">password :</label>
    <input type="password" id="password" name="password" class="form-control"
      placeholder="Enter Password" required value="12345678">
    <button type="submit" class="btn btn-primary btn-block">Login</button>
    <a href="/auth/facebook" class="btn btn-info btn-block"><i
        class="fab fa-facebook-square mr-1"></i>Facebook Login</a>
  </form>
  <p class="lead mt-4">
    No Account? <a href="/users/register">Register</a>
  </p>
</div>